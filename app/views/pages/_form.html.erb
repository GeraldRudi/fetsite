<%= tinymce_assets %>
<%= semantic_form_for @page do |f| %>
<%= f.inputs do %>
	<%= f.input :name %>
	<%= f.input :body, :as=>:text,:input_html=>{:style=>"width:100%"} %>
	<%= f.input :change_comment %>
<% end %>
<%= tinymce %>
<%= f.actions do %>
	<%= f.action :submit, :as =>:input %>
<% end %>
<% end %>
