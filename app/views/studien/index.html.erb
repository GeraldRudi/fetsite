<h1><%= I18n.t("studien.list") %></h1>


<% @studien.sort_by{|z| z[:zahl]}.each do |studium| %>
<div>

  <h2><%= link_to studium.zahl + " "+ studium.typ+" " + studium.name, studium_path(studium, :sem=>"true") %></h2>
  (<%= link_to "Modulansicht", studium_path(studium, :sem=>"false") %>)
  
</div>  
<% end %>


