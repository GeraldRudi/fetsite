
<div class="container-fluid"
  <div class="row-fluid">
	<div class="span9">
		<%= neuigkeit.rubrik.name %>
			</div>
	<div class="span3"><p>
		<%= neuigkeit.try(:author).email.to_s %> am 
		<%= I18n.l neuigkeit.datum.to_date %></p>
	</div>
  </div>
  <div class="row-fluid">
	<div class="span12">
		<div class="media">
		<div class="pull-right" href="#">
			<p><br><%= image_tag neuigkeit.picture.thumb.url %></p>
		</div>
		<div class="media-body">
			<h1><%= link_to neuigkeit.title,neuigkeit_path(neuigkeit)  %></h1>
			<%= raw(neuigkeit.text) %>
		</div>
	</div>
  </div>
