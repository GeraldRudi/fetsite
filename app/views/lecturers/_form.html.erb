<%= semantic_form_for @lecturer do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :oid %>
    <%= f.input :picture, :as=>:file %>
    <%= f.input :lvas %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
